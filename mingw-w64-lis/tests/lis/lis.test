package require buildtest

buildtest::sandbox {
	test test4 {C test 4} {
		-constraints {c double}
		-body {run [build {lis-dso} test4.c]}
	}
	test test7 {C test 7} {
		-constraints {c complex cdouble}
		-body {run [build {lis-zso} test7.c]}
	}
	test test1f {Fortran test 1} {
		-constraints {fortran double}
		-body {run [build {lis-dso} test1f.F]}
	}
	test test7f {Fortran test 7} {
		-constraints {fortran complex cdouble}
		-body {run [build {lis-zso} test7f.F]}
	}
}
